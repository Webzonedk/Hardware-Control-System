@model List<RedCrossItCheckingSystem.Models.DataContainer>
@{
    ViewData["Title"] = "Home Page";
}



@if (Model.Count > 0)
{

    <div class="row">
        <div class="col-md-12 ">
            <span class="col-md-2">
                <label asp-for="@Model[0].CaseID"> </label>
            </span>

            <span class="col-md-2">
                <label asp-for="@Model[0].SerialNumber"> </label>
            </span>

            <span class="col-md-1">
                <label asp-for="@Model[0].Accessories"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].Department"> </label>
            </span>
            <span class=" col-md-1">
                    <label asp-for="@Model[0].DeviceName"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].DeviceType"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].EmplyeeName"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].Status"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].DateStart"> </label>
            </span>
            <span class="col-md-1">
                <label asp-for="@Model[0].DateEnd"> </label>
            </span>

        </div>


    </div>


    <form asp-action="Edit">

        @for (int i = 0; i < Model.Count; i++)
        {

            <div method="post" asp-validation-summary="ModelOnly"></div>

            <div class="row">
                <div class="col-md-12 ">

                    <span class="col-md-2">
                        @Model[i].CaseID
                    </span>

                    <span class="col-md-2">
                        @Model[i].SerialNumber
                    </span>

                    <span class="col-md-1">
                        @Model[i].Accessories
                    </span>
                    <span class="col-md-1">
                        @Model[i].Department
                    </span>
                    <span class="col-md-1">
                        @Model[i].DeviceName
                    </span>
                    <span class="col-md-1">
                        @Model[i].DeviceType
                    </span>
                    <span class="col-md-1">
                        @Model[i].EmplyeeName
                    </span>
                    <span class="col-md-1">
                        @Model[i].Status
                    </span>
                    <span class="col-md-1">
                        @Model[i].DateStart.ToShortDateString()
                    </span>
                    <span class="col-md-1">
                        @Model[i].DateEnd.ToShortDateString()
                    </span>
                </div>

            </div>
        }
    </form>

}
else
{
    <label>intet fundet i databasen</label>

}

@section scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}
