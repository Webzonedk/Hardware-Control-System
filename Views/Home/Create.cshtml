@model RedCrossItCheckingSystem.Models.DataContainer
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Confirmation">
    <div method="post" asp-validation-summary="ModelOnly"></div>

    <div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="SerialNumber"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="SerialNumber" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Department"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="Department" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="EmplyeeName"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="EmplyeeName" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="Description" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="DateStart"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="DateStart" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="DateEnd"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="DateEnd" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="DeviceName"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="DeviceName" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="DeviceType"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="DeviceType" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Accessories"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="Accessories" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="Status"></label>
            </div>
            <div class="col-md-1">
                <input asp-for="Status" />
            </div>
        </div>


        <input class="btn btn-primary" type="submit" value="Opret" />
    </div>




</form>

@section scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}
