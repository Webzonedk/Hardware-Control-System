@model RedCrossItCheckingSystem.Models.DataContainer
@{
    ViewData["Title"] = "Bekræftigelse";
}

<div>
    <h2>Vi har registreret følgende</h2>
</div>

<form asp-action="Edit">
    <div method="post" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Serienummer:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="SerialNumber" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Kategori:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="DeviceType" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Model:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="DeviceName" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Tilbehør:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="Accessories" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Afdeling:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="Department" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Medarbejder:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="EmplyeeName" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Start Dato:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="DateStart" type="date" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Slut Dato:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="DateEnd" type="date" readonly/>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 label">
                <label>Status:</label>
            </div>
            <div class="col-md-2">
                <input class="colWidth100" asp-for="Status" readonly/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 label">
                <label>Beskrivelse:</label>
            </div>
            <div class="col-md-2">
                <textarea asp-for="Description" rows="5" cols="40" readonly></textarea >
            </div>
        </div>


        <button class="btn btn-primary" type="submit" name="submit" value="@Model.CaseID">Rediger</button>

    </div>

</form>

<form action="Index">
    <input class="btn btn-primary" type="submit" value="Fortsæt" />
</form>

@section scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}