                <div class="col-md-1">
                    <input asp-for="Accessories" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Status"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="Status" />
                </div>
            </div>


            <input class="btn btn-primary" type="submit" value="Edit" />
        </div>
    }
    else
    {
        <label>intet fundet</label>
        <input class="btn btn-primary" type="submit" value="New Case" />
    }


</form>

@section scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}