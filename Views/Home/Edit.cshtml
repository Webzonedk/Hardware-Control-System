            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="CaseID"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="CaseID" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Department"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="Department" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="EmplyeeName"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="EmplyeeName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="Description" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="DateStart"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="DateStart" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="DateEnd"></label>
                </div>
                <div class="col-md-1">
                    <input asp-for="DateEnd" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
