@model List<RedCrossItCheckingSystem.Models.DataContainer>
@{
    ViewData["Title"] = "Søg";
}

<div class="container shadow">

    <div class="row">
       
            <div class="col-md-auto ">
                <h2>Søgning udført</h2>

            </div>
            <div class="col">
                <h4 class="buttonInColumn"> (Vi fandt @Model.Count sager i systemet)</h4>
            </div>
       
    </div>

    <div class="row">
        <div class="col-md-12">


            @if (Model.Count > 0)
            {


                <div class="row">

                    <span class="col-md-2 ">
                        <label>Serienummer </label>
                    </span>

                    <span class="col-md-2 ">
                        <label>Model navn </label>
                    </span>

                    <span class="col-md-2 ">
                        <label>Hardware type </label>
                    </span>
                    <span class="col-md-6 ">

                    </span>

                </div>


                <form asp-action="Edit">

                    @for (int i = 0; i < Model.Count; i++)
                    {

                        <div method="post" asp-validation-summary="ModelOnly"></div>

                        <div class="row searchResult">


                            <span class="col-md-2">
                                <input asp-for="@Model[i].SerialNumber" readonly />
                            </span>

                            <span class="col-md-2">
                                <input asp-for="@Model[i].DeviceName" readonly />
                            </span>

                            <span class="col-md-2">
                                <input asp-for="@Model[i].DeviceType" readonly />
                            </span>
                            <span class="col-md-6">
                                <button class="btn btn-primary btn-sm" type="submit" name="submit" value="@Model[i].CaseID">Rediger</button>
                            </span>


                        </div>
                    }
                </form>

            }
            else
            {
                <h4>intet fundet</h4>

                <form asp-action="Create">
                    <input class="btn btn-primary" type="submit" value="Opret ny sag" />
                </form>

            }
        </div>
    </div>
</div>

@section scripts {
    @{await Html.RenderPartialAsync("_validationScriptsPartial");}
}
